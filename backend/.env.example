# Redis configuration
REDIS_URL = redis://:your_redis_password@redis-host:6379

# Authentication credentials
ADMIN_USERNAME = your-admin-username
ADMIN_PASSWORD = your-secure-admin-password
ADMIN_PASSWORD_HASH = your-admin-password-hash
ADMIN_SESSION_TTL_SECONDS = 86400
ADMIN_WALLETS = your-comma-separated-admin-wallets

# Hugging Face API configuration for Overseer AI personality
HF_API_KEY = your-huggingface-api-key
HF_MODEL = mistralai/Mixtral-8x7B-Instruct-v0.1

# Game cooldown settings
COOLDOWN_PREFIX = cooldown-prefix
COOLDOWNS_FAIL_SAFE = deny
LOOT_COOLDOWN_SECONDS = 300
COOLDOWN_SECONDS = 60  # default cooldown (example)

# KMS signing key for vouchers (production mode)
KMS_SIGNING_KEY_ID = arn:aws:kms:us-west-2:123456789012:key/abcd-efgh
AWS_REGION = us-west-2

# Logging and auditing
AUDIT_S3_BUCKET = your-audit-bucket

# GPS configuration
GPS_SECRET = your-gps-secret
GPS_DISTANCE_LIMIT = your-distance-limit

# Vouchers configuration
VOUCHER_KEY = your-voucher-key
VOUCHER_SECRET = your-voucher-secret
VOUCHER_TTL_SECONDS = 3600

# Experience points (XP) system
XP_KEY = your-xp-key
XP_SECRET = your-xp-secret
XP_RATE = your-xp-rate

# Solana configuration
SOLANA_RPC = your-solana-rpc-url
TOKEN_MINT = your-solana-token-mint

# Server/Environment Secrets
SERVER_SECRET_KEY = your-base58-encoded-64-byte-secret-key
GAME_VAULT_SECRET = your-game-vault-secret

# Development URLs
CLIENT_ORIGIN = http://localhost:3000  # Example for local testing
NEXT_PUBLIC_BACKEND_URL = http://localhost:4000

# Port configuration
PORT = 4000

# Redis production settings
REQUIRE_REDIS_IN_PRODUCTION = true
STRICT_REPLAY_PROTECTION = true
