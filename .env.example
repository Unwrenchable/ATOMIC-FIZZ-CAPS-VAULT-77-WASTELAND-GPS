# ☢️ ATOMIC FIZZ CAPS - Environment Variables (Alphabetical)
# Do NOT commit real secrets to version control!
# See ENVIRONMENT_VARIABLES.md for detailed documentation

# Admin Configuration
ADMIN_PASSWORD_HASH=<MD5_OR_SHA_HASH>
ADMIN_SESSION_TTL_SECONDS=86400
ADMIN_USERNAME=admin
ADMIN_WALLETS=wallet1,wallet2

# AWS Configuration (optional, for KMS signing)
# See docs/AWS_KMS_SETUP.md for instructions on creating your KMS key
# AWS_REGION=us-west-2
# KMS_SIGNING_KEY_ID=arn:aws:kms:us-west-2:123456789012:key/abcd-efgh

# Client/Frontend Configuration
CLIENT_ORIGIN=http://localhost:3000
FRONTEND_ORIGIN=http://localhost:3000

# Cooldown Settings
COOLDOWN_PREFIX=cooldown:
COOLDOWN_SECONDS=60
COOLDOWNS_FAIL_SAFE=deny
LOOT_COOLDOWN_SECONDS=300

# Game Secrets
GAME_VAULT_SECRET=<BASE58_SECRET>
GPS_SECRET=<BASE58_SECRET>
VOUCHER_KEY=v1
VOUCHER_SECRET=<BASE58_SECRET>
VOUCHER_TTL_SECONDS=3600
XP_KEY=xp_v1
XP_RATE=1.0
XP_SECRET=<BASE58_SECRET>

# GPS Configuration
GPS_DISTANCE_LIMIT=1000

# Hugging Face AI (Overseer)
HF_API_KEY=<YOUR_HF_API_KEY>
HF_MODEL=mistralai/Mixtral-8x7B-Instruct-v0.1

# Helius API (optional, for NFT features)
HELIUS_API_KEY=<YOUR_HELIUS_API_KEY>

# Model Configuration
MODEL=mistralai/Mixtral-8x7B-Instruct-v0.1

# Backend URL
NEXT_PUBLIC_BACKEND_URL=http://localhost:3000

# Node Environment
NODE_ENV=development
PORT=3000

# Redis Configuration
REDIS_URL=redis://default:password@localhost:6379
REQUIRE_REDIS_IN_PRODUCTION=true

# Server Security
SERVER_SECRET_KEY=<BASE58_64_BYTE_SECRET>
STRICT_REPLAY_PROTECTION=true

# Solana Configuration
SOLANA_RPC=https://api.devnet.solana.com
TOKEN_MINT=<YOUR_TOKEN_MINT_ADDRESS>
