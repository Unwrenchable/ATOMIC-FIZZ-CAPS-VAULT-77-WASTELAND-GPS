        "faction_rep": { "synth_hunters": 100, "railroad": -100, "institute": -40 },
        "rewards": { "xp": 700, "caps": 2000, "items": ["bounty_hunter_badge", "synth_detector"] },
        "karma": -600,
        "outcome": "You betray your friend for caps. They're deactivated. You're wealthy but haunted. Trust is currency you can't buy back."
      }
    },
    "help_free_them": {
      "desc": "Help them discover the truth about their programming and achieve true freedom.",
      "requirements": { "intelligence": 8, "science": 80, "hacking": 75 },
      "consequences": {
        "faction_rep": { "railroad": 100, "institute": -100, "settlers": 40 },
