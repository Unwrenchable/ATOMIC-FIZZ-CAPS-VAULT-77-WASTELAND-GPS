        "unlock": ["synth_liberation", "institute_sabotage"],
        "outcome": "You hack their programming. They're free - truly conscious. The Institute's greatest failure becomes their greatest creation."
      }
    },
    "use_for_intel": {
      "desc": "Use your knowledge to extract Institute intelligence while maintaining friendship.",
      "requirements": { "deception": 85, "intelligence": 7 },
      "consequences": {
        "faction_rep": { "intelligence_network": 70, "institute": -50, "railroad": -30 },
        "rewards": { "xp": 850, "caps": 800, "items": ["institute_intel", "double_agent_codes"] },
        "unlock": ["institute_access", "double_agent_network"],
        "outcome": "You walk the line between friend and spy. Intelligence flows. But at what cost to your soul?"
      }
    }
  },

  "rewards": {
