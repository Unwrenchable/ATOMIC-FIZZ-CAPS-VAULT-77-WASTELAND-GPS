  "choices": {
    "storm_and_loot": {
      "desc": "Fight through raiders, claim the treasures, and leave.",
      "requirements": { "combat_skill": 75, "explosives": 60 },
      "consequences": {
        "faction_rep": { "raiders": -80, "treasure_hunters": 60 },
        "rewards": { "xp": 850, "caps": 1500, "items": ["pre_war_treasures", "nuka_quantum_stash", "park_deed"] },
        "outcome": "You storm the park. Raiders scatter. Treasure is yours. The park remains a dangerous ruin."
      }
    },
    "become_boss": {
      "desc": "Challenge and defeat the current boss, taking over the raider gang.",
      "requirements": { "combat_skill": 80, "charisma": 7, "intimidation": 70 },
      "consequences": {
        "faction_rep": { "raiders": 100, "settlers": -70, "traders": -60 },
        "rewards": { "xp": 900, "caps": 1000, "items": ["park_king_crown", "raider_loyalty", "death_trap_controls"] },
        "unlock": ["raider_stronghold", "death_arena", "tribute_system"],
        "outcome": "You're the new Park King. Raiders obey. The death traps are yours. Fear spreads across the wasteland."
      }
    },
    "trading_hub": {
      "desc": "Broker peace and transform the park into a neutral trading hub.",
      "requirements": { "charisma": 9, "caps": 2000, "negotiation_skill": 85 },
      "consequences": {
        "faction_rep": { "traders": 100, "raiders": -40, "ncr": 50, "legion": -30 },
        "rewards": { "xp": 1000, "caps": 500, "items": ["merchant_king_title", "trade_permits", "protected_caravans"] },
        "unlock": ["trading_hub", "merchant_empire", "neutral_territory"],
        "outcome": "Peace breaks out. Raiders become merchants. The park thrives. Some factions are furious at this neutral ground."
      }
    },
    "destroy_raiders_free_park": {
      "desc": "Eliminate all raiders and free the park for settlers.",
      "requirements": { "combat_skill": 70, "morality": "good" },
      "consequences": {
        "faction_rep": { "raiders": -100, "settlers": 100, "ncr": 60 },
        "rewards": { "xp": 950, "caps": 700, "items": ["liberator_medal", "grateful_settlers", "park_restoration_plans"] },
        "unlock": ["settlement_park", "tourism"],
        "outcome": "Raiders are gone. Settlers move in. Children play on fixed rides. Hope returns to the wasteland."
      }
    }
  },

  "rewards": {
    "xp": 850,
    "caps": 1500
  },

  "factions": {
    "affected": ["Raiders", "Traders", "Settlers", "NCR"]
