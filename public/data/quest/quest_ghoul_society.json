  },

  "npc_links": [
    "npc_survivor_refugee",
    "npc_ghoul_elder",
    "npc_ghoul_child",
    "npc_wasteland_vigilante",
    "npc_settlers_leader"
  ],

  "map_markers": [
    {
      "id": "marker_ghoul_metro",
