{
  "id": "quest_harlan_echoes",
  "name": "Echoes of a Ranger",
  "type": "main",
  "region": "Mojave",
  "description": "You discover clues left behind by NCR Ranger Harlan Voss. His trail hints at the disappearance of his son, Jax.",
  "triggers": [
    "player_pickup:holotape_voss01",
    "player_pickup:ranger_badge_fragment",
    "player_pickup:note_harlan_coords",
    "player_loot:scavenger_drop_harlan",
    "player_talk:npc_random_scavenger",
    "player_talk:npc_ranger_retired",
    "player_enter:poi_ranger_outpost_ruins",
    "player_enter:poi_highway_collapse",
    "overseer_memory_glitch:true"
  ],
  "stages": [
    {
      "id": 0,
      "name": "A Ranger's Echo",
      "description": "You've found something connected to NCR Ranger Harlan Voss.",
      "trigger": "auto",
      "actions": [
        "dialogue:overseer_detect_harlan",
        "set_flag:harlan_echoes_started=true",
        "unlock_stage:10"
      ]
    },
    {
      "id": 10,
      "name": "Play the Holotape or Read the Note",
      "description": "Examine the item you found to learn more about Harlan's search for Jax.",
      "trigger": [
        "player_use:holotape_voss01",
        "player_use:note_harlan_coords",
        "player_use:ranger_badge_fragment"
      ],
      "actions": [
        "dialogue:harlan_initial_message",
        "set_flag:harlan_initial_clue_read=true",
        "unlock_stage:20"
      ]
    },
    {
      "id": 20,
      "name": "Investigate the Coordinates",
      "description": "Travel to the location mentioned in Harlan's clue.",
      "trigger": "player_reaches:harlan_echoes_coords",
      "actions": [
        "spawn:scavenger_camp_ruins",
        "dialogue:overseer_comment_coords",
        "unlock_stage:30"
      ]
    },
    {
      "id": 30,
      "name": "Search the Ruins",
      "description": "Search the ruined scavenger camp for more clues about Jax.",
      "trigger": "player_search:scavenger_camp_ruins",
      "actions": [
        "spawn:item_harlan_note",
        "dialogue:overseer_find_note",
        "unlock_stage:40"
      ]
    },
    {
      "id": 40,
      "name": "Read Harlan's Note",
      "description": "Read the note left behind by Harlan.",
      "trigger": "player_use:item_harlan_note",
      "actions": [
        "dialogue:harlan_note01",
        "set_flag:harlan_note01_read=true",
        "unlock_stage:50"
      ]
    },
    {
      "id": 50,
      "name": "Quest Complete",
      "description": "You've uncovered the first clues about Jax's disappearance.",
      "trigger": "auto",
      "actions": [
        "unlock_quest:quest_harlan_lastsigns",
        "complete_quest:true"
      ]
    }
  ],
  "flags": {
    "harlan_echoes_started": false,
    "harlan_initial_clue_read": false,
    "harlan_note01_read": false
  },
  "rewards": {
    "xp": 150,
    "items": ["item_harlan_note"]
  }
}
